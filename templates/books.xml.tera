
{% extends "layout.xml.tera" %}
{% block content %}

<title>Books | {{ books | length() }}</title>

  {% for book in books %}
  <entry>
    <title>{{ book.title }}</title>
    <id>{{ book.id }}</id>
    <link href="/cover/{{ book.id }}" type="image/jpeg" rel="http://opds-spec.org/image"/>
    <link href="/cover/{{ book.id }}" type="image/jpeg" rel="http://opds-spec.org/image/thumbnail"/>
    {% for format in book.formats %}
      <link href="/file/{{ book.id }}/{{ format }}" type="{{ format | format_to_mime }}" rel="http://opds-spec.org/acquisition" title="{{ book.title }}.{{ format }}"/>
    {% endfor %}
    <content type="text">{{ book.synopsis }}</content>
    <author>
      <name>{{ book.author_name }}</name>
      <uri>/author/{{ book.author_id }}</uri>
    </author>
  <published>{{ book.pubdate }}</published>
  </entry>
  {% endfor %}

{% endblock content %}
